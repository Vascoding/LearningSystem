
@{
    ViewData["Title"] = "Create Article";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <hr />
            <div class="form-group">
                <label for="Title"></label>
                <input name="Title" id="Title" type="text" />
            </div>
            <div class="form-group">
                <label for="Content"></label>
                <textarea name="Content" id="Content" type="text" rows="6" cols="35"></textarea>
            </div>
            <div class="form-group">
                <label for="PublishDate"></label>
                <input name="PublishDate" id="PublishDate" type="date" />
            </div>
            <button type="submit" class="btn btn-primary">Post Article</button>
        </form>
    </div>
</div>